<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:clipToPadding="false">

    <TextView
        android:id="@+id/avatar_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="40dp"
        android:gravity="center"
        android:lineSpacingMultiplier="1.20"
        android:maxWidth="312dp"
        android:maxLines="2"
        android:text="@string/signup__avatar_title_label"
        android:textColor="@color/grey_text_1"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/avatar_btn_next"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginStart="56dp"
        android:layout_marginEnd="56dp"
        android:enabled="false"
        android:gravity="center"
        android:longClickable="false"
        android:stateListAnimator="@animator/shadow"
        android:text="@string/signup_next_button"
        android:textAllCaps="false"
        android:textIsSelectable="false"
        android:textSize="17sp"
        android:theme="@style/SignUpButtonNext"
        app:cornerRadius="100dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profile_image_background" />


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/profile_image_background"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_marginStart="92dp"
        android:layout_marginLeft="92dp"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="92dp"
        android:layout_marginRight="92dp"
        android:theme="@style/LargeAvatarCardView"
        app:cardCornerRadius="85dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/avatar_title">

        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:padding="21dp"
            app:srcCompat="@drawable/ic_avatar_placeholder"
            android:contentDescription="@string/image_view_description_profile_image" />


    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/profile_photo_background"
        android:layout_width="58dp"
        android:layout_height="58dp"
        android:theme="@style/MinimumAvatarCardView"
        app:cardCornerRadius="85dp"
        app:layout_constraintBottom_toBottomOf="@+id/profile_image_background"
        app:layout_constraintEnd_toEndOf="@+id/profile_image_background">

        <ImageView
            android:id="@+id/profile_photo_camera"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="14dp"
            app:srcCompat="@drawable/ic_baseline_photo_camera_24"
            android:contentDescription="@string/image_view_content_description_photo" />
    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>