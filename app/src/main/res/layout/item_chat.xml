<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/chat_ground"
    android:layout_height="72dp"
    android:clickable="true"
    android:layout_width="match_parent"
    android:focusable="true"
    android:background="@color/white">

    <View
        android:id="@+id/profile_divider"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_marginVertical="1dp"
        android:background="@color/green_500"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/chat_image_container"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_margin="12dp"
        app:cardCornerRadius="28dp"
        app:cardElevation="0dp"
        android:background="@color/blue_500"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/chat_image"
            android:layout_width="56dp"
            android:layout_height="56dp"
            tools:background="@tools:sample/avatars" />
    </androidx.cardview.widget.CardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/chat_status_container_16"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_margin="39dp"
        android:layout_marginEnd="16dp"
        android:elevation="0dp"
        android:theme="@style/Theme.MaterialComponents.Light.NoActionBar"
        android:visibility="gone"
        app:cardBackgroundColor="@color/green_500"
        app:cardCornerRadius="8dp"
        app:cardElevation="0dp"
        app:contentPadding="1dp"
        app:layout_constraintStart_toStartOf="@id/chat_image_container"
        app:layout_constraintTop_toTopOf="@id/chat_image_container"
        app:strokeColor="@color/white"
        app:strokeWidth="1dp"
        tools:visibility="visible">

        <ImageView
            android:id="@+id/chat_status_16"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:src="@drawable/ic_material_contact_24"
            tools:tint="@color/white" />
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/chat_status_container_12"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_margin="3.2dp"
        android:layout_marginEnd="16dp"
        android:elevation="0dp"
        android:theme="@style/Theme.MaterialComponents.Light.NoActionBar"
        android:visibility="gone"
        app:cardBackgroundColor="@color/green_500"
        app:cardCornerRadius="6dp"
        app:cardElevation="0dp"
        app:contentPadding="1dp"
        app:layout_constraintBottom_toBottomOf="@id/chat_image_container"
        app:layout_constraintEnd_toEndOf="@id/chat_image_container"
        app:strokeColor="@color/white"
        app:strokeWidth="1dp"
        tools:visibility="visible">

        <ImageView
            android:id="@+id/chat_status_12"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:src="@drawable/ic_material_contact_24"
            tools:tint="@color/white" />
    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/chat_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="94dp"
        android:textColor="@color/grey_900"
        android:ellipsize="end"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@id/chat_image_container"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@tools:sample/full_names" />

    <TextView
        android:id="@+id/chat_timestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:textColor="@color/grey_text_2"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@tools:sample/date/hhmm" />

    <TextView
        android:id="@+id/chat_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="72dp"
        android:ellipsize="end"
        android:lines="2"
        android:textColor="@color/grey_text_2"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@+id/chat_image_container"
        app:layout_constraintTop_toBottomOf="@id/chat_name"
        tools:text="@tools:sample/lorem/random" />

    <ImageView
        android:id="@+id/chat_muted"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginStart="4dp"
        android:src="@drawable/ic_material_bell_off_24"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/chat_name"
        app:layout_constraintStart_toEndOf="@id/chat_name"
        app:layout_constraintTop_toTopOf="@id/chat_name"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/chat_pinned"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/ic_material_pinned_24"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chat_timestamp"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/chat_status_image"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/ic_material_check_all_24"
        android:visibility="gone"
        app:layout_constraintEnd_toStartOf="@id/chat_pinned"
        app:layout_constraintTop_toBottomOf="@+id/chat_timestamp"
        tools:visibility="visible" />

    <androidx.cardview.widget.CardView
        android:id="@+id/unread_messages_wrapper"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:backgroundTint="@color/green_500"
        android:visibility="gone"
        app:cardCornerRadius="12dp"
        app:layout_constraintEnd_toStartOf="@+id/chat_pinned"
        app:layout_constraintTop_toBottomOf="@+id/chat_timestamp"
        tools:visibility="visible">

        <TextView
            android:id="@+id/unread_messages_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:lines="1"
            android:maxWidth="24dp"
            android:maxHeight="24dp"
            android:maxLength="2"
            android:textColor="@color/white"
            android:textSize="13sp"
            tools:text="00" />
    </androidx.cardview.widget.CardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/chat_sync_image"
        android:layout_width="4dp"
        android:layout_height="4dp"
        android:layout_marginStart="2dp"
        android:theme="@style/Theme.MaterialComponents.Light.NoActionBar"
        android:visibility="gone"
        app:cardBackgroundColor="@color/grey_200"
        app:cardCornerRadius="2dp"
        app:layout_constraintBottom_toBottomOf="@id/chat_timestamp"
        app:layout_constraintStart_toEndOf="@id/chat_timestamp"
        app:layout_constraintTop_toTopOf="@id/chat_timestamp"
        tools:visibility="visible" />

    <View
        android:id="@+id/item_divider"
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:layout_marginVertical="1dp"
        android:background="@color/grey_200"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/chat_name" />
</androidx.constraintlayout.widget.ConstraintLayout>