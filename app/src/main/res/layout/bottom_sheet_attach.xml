<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bottom_sheet_backgroubd_white"
    android:minHeight="200dp"
    android:orientation="vertical"
    android:paddingStart="4dp"
    android:paddingEnd="4dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/swipe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="12dp"
        android:src="@drawable/bottom_sheet_swipe"
        app:layout_constraintBottom_toTopOf="@id/images"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/images"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/swipe" />


    <LinearLayout
        android:id="@+id/input_layout"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:layout_gravity="center_horizontal"
        android:background="@color/white"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/button_emoticon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="center_vertical"
        android:layout_margin="16dp"
        android:background="@color/transparent"
        app:layout_constraintBottom_toBottomOf="@id/input_layout"
        app:layout_constraintStart_toStartOf="@id/input_layout"
        app:layout_constraintTop_toTopOf="@id/input_layout"
        app:srcCompat="@drawable/ic_material_emoticon_outline_24"
        app:tint="@color/grey_500" />

    <EditText
        android:id="@+id/chat_input"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="20dp"
        android:background="@android:color/white"
        android:cursorVisible="true"
        android:fadingEdge="vertical"
        android:filterTouchesWhenObscured="false"
        android:gravity="center_vertical"
        android:hint="Add a message..."
        android:imeOptions="actionSend|flagNoExtractUi"
        android:inputType="textAutoCorrect|textCapSentences|textMultiLine"
        android:maxLines="4"
        android:minHeight="40dp"
        android:scrollbars="vertical"
        app:layout_constraintBottom_toBottomOf="@id/input_layout"
        app:layout_constraintStart_toEndOf="@id/button_emoticon"
        app:layout_constraintTop_toTopOf="@id/input_layout"
        app:layout_constraintEnd_toStartOf="@id/btn_send"/>

    <ImageView
        android:id="@+id/btn_send"
        app:layout_constraintEnd_toEndOf="@id/input_layout"
        app:layout_constraintTop_toTopOf="@id/input_layout"
        app:layout_constraintBottom_toBottomOf="@id/input_layout"
        android:src="@drawable/ic_send_circle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
       android:layout_marginBottom="48dp"/>
    <ImageView
        android:id="@+id/badge"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="-6dp"
        android:layout_marginBottom="-6dp"
        app:layout_constraintEnd_toEndOf="@id/btn_send"
        app:layout_constraintBottom_toBottomOf="@id/btn_send"
        android:src="@drawable/ic_badge"/>

    <TextView
        android:id="@+id/tv_count_files"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/badge"
        app:layout_constraintEnd_toEndOf="@id/badge"
        app:layout_constraintTop_toTopOf="@id/badge"
        app:layout_constraintBottom_toBottomOf="@id/badge"
        android:text="1"
        android:textColor="@color/white"/>

    <HorizontalScrollView
        android:id="@+id/attach_scroll_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:baselineAligned="false"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <RadioButton
                android:id="@+id/attach_gallery_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:button="@null"
                android:clickable="true"
                android:drawableTop="@drawable/ic_gallery_circle"
                android:focusable="true"
                android:gravity="center"
                android:text="Gallery"
                android:textColor="@color/grey_text_2" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:button="@null"
                android:clickable="true"
                android:drawableTop="@drawable/ic_file_circle"
                android:focusable="true"
                android:gravity="center"
                android:text="File"
                android:textColor="@color/grey_text_2" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:button="@null"
                android:drawableTop="@drawable/radio_button_location_selector"
                android:gravity="center"
                android:stateListAnimator="@null"
                android:text="Location"
                android:textColor="@color/grey_text_2" />
        </RadioGroup>
    </HorizontalScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>