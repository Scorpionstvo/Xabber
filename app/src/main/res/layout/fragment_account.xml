<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/main_content"
android:fitsSystemWindows="true"
android:layout_width="match_parent"
android:layout_height="match_parent"
>

<com.google.android.material.appbar.AppBarLayout
android:id="@+id/appbar"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:fitsSystemWindows="true"
android:background="@color/green_300"
>

<com.google.android.material.appbar.CollapsingToolbarLayout
android:id="@+id/collapsing_toolbar"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:elevation="8dp"
android:fitsSystemWindows="true"
app:expandedTitleMarginBottom="50dp"
app:expandedTitleMarginEnd="64dp"
app:expandedTitleMarginStart="88dp"
app:expandedTitleTextAppearance="@style/ContactViewCollapsingToolbarNew"
app:layout_scrollFlags="scroll|exitUntilCollapsed"
app:statusBarScrim="@color/transparent"
android:background="@color/purple_200">


<FrameLayout
android:layout_width="match_parent"
android:layout_height="match_parent"
android:fitsSystemWindows="true">

<ImageView
android:id="@+id/backgroundView"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:scaleType="centerCrop"
app:srcCompat="@color/blue_300" />

<ImageView
android:id="@+id/backgroundTintLower"
android:layout_width="match_parent"
android:layout_height="match_parent"
app:srcCompat="@drawable/contact_image_gradient_dark_tint"
tools:visibility="visible" />

       <ImageView
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:src="@drawable/avatar_photo"/>
</FrameLayout>

<ImageView
android:id="@+id/backgroundTintUpper"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:fitsSystemWindows="true"
app:layout_collapseMode="parallax"
app:layout_collapseParallaxMultiplier="1"
app:srcCompat="@drawable/contact_image_gradient_dark_tint_down"
tools:visibility="visible" />

<androidx.appcompat.widget.Toolbar
android:id="@+id/toolbar_default"
android:layout_width="match_parent"
android:layout_height="?attr/actionBarSize"
android:elevation="8dp"
android:theme="@style/ThemeBorderlessVcard"
app:layout_collapseMode="pin"
app:popupTheme="?attr/toolbar_popup_theme" >
   <LinearLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:layout_gravity="end"/>
    <ImageView
        android:id="@+id/im_qr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_qrcode"
        android:layout_margin="12dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_palette"
        android:layout_margin="12dp"/>

    <androidx.appcompat.widget.SwitchCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"/>


</androidx.appcompat.widget.Toolbar>



</com.google.android.material.appbar.CollapsingToolbarLayout>

</com.google.android.material.appbar.AppBarLayout>


<androidx.core.widget.NestedScrollView
android:id="@+id/scrollable_container"
android:layout_width="match_parent"
android:layout_height="wrap_content"
app:layout_behavior="com.xabber.presentation.application.fragments.account.CustomScrollingViewBehavior">

<androidx.recyclerview.widget.RecyclerView
android:id="@+id/account_options_recycler_view"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:listitem="@layout/item_account_option" />
</androidx.core.widget.NestedScrollView>



</androidx.coordinatorlayout.widget.CoordinatorLayout>