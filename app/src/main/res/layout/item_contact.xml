<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:clickable="true"
    xmlns:tools="http://schemas.android.com/tools"
    android:focusable="true">

    <androidx.cardview.widget.CardView
        android:id="@+id/contact_image_container"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginVertical="8dp"
        android:clickable="true"
        android:focusable="true"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:cardCornerRadius="24dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/contact_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/blue_500" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/contact_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="64dp"
        android:lines="1"
        android:textColor="@color/grey_900"
        android:textSize="16sp"
        android:ellipsize="end"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/contact_image_container"
        tools:text="@tools:sample/full_names" />

    <TextView
        android:id="@+id/contact_subtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="64dp"
        android:lines="1"
        android:textColor="@color/grey_text_3"
        android:textSize="14sp"
        android:ellipsize="end"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintTop_toBottomOf="@id/contact_name"
        app:layout_constraintStart_toEndOf="@id/contact_image_container"
        tools:text="@tools:sample/lorem/random" />

    <androidx.cardview.widget.CardView
        android:id="@+id/contact_status_container"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:visibility="visible"
        tools:backgroundTint="@color/green_700"
        android:layout_marginEnd="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible">

        <ImageView
            android:id="@+id/contact_status"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            tools:src="@drawable/ic_material_contact_24"
            tools:tint="@color/white" />
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>