<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="@drawable/bottom_sheet_background"
    android:minHeight="180dp"
    android:orientation="vertical">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/bottom_sheet_swipe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:src="@drawable/avatar_swipe" />

    <RelativeLayout
        android:id="@+id/emoji_view_group"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/item_bottom_sheet_background_dark"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:id="@+id/image_view_emoji"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="12dp"
            app:srcCompat="@drawable/ic_material_emoticon_24"
            android:contentDescription="@string/image_view_content_description_use_emoji" />

        <TextView
            android:id="@+id/tvEmoji"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/image_view_emoji"
            android:background="@color/transparent"
            android:gravity="center_vertical"
            android:text="@string/signup_bottom_sheet_button_emoji_label"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:textColor="@color/grey_600"
            android:textSize="20sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/selfie_view_group"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/item_bottom_sheet_background_dark"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:id="@+id/image_view_selfie"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="12dp"
            app:srcCompat="@drawable/ic_material_camera_24"
            android:contentDescription="@string/image_view_content_description_take_selfie" />

        <TextView
            android:id="@+id/tvSelfie"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/image_view_selfie"
            android:background="@color/transparent"
            android:gravity="center_vertical"
            android:text="@string/signup_bottom_sheet_button_selfie_label"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"

            android:textColor="@color/grey_600"
            android:textSize="20sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/chose_image_view_group"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/item_bottom_sheet_background_dark"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:id="@+id/image_view_chose_image"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="12dp"
            app:srcCompat="@drawable/ic_material_image_24"
            android:contentDescription="@string/image_view_content_description_choose_image" />

        <TextView
            android:id="@+id/tvChoseImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/image_view_chose_image"
            android:gravity="center_vertical"
            android:text="@string/signup_bottom_sheet_button_chose_label"
            android:textAllCaps="false"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:textColor="@color/grey_600"
            android:textSize="20sp" />
    </RelativeLayout>
</LinearLayout>