<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/message_shadow"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/msg_shadow"
    android:backgroundTint="@color/black">

    <LinearLayout
        android:id="@+id/message_balloon"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/msg"
        android:backgroundTint="?attr/message_background"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">

        <TextView
            android:id="@+id/message_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="nickname@example.com"
            android:textSize="12sp" />

        <FrameLayout
            android:id="@+id/imageGridContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/message_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:visibility="gone" />





        <TextView
            android:id="@+id/message_text_for_filenames"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="160dp"
            tools:text="some_file_name.txt"
            android:visibility="gone" />

        <com.xabber.presentation.custom.CustomFlexboxLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:viewPartMain="@+id/message_text"
            app:viewPartSlave="@+id/message_info"
            >

            <com.xabber.presentation.application.fragments.message.CorrectlyMeasuringTextView
                android:id="@+id/tv_text_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Some text"
                android:textColor="@color/black_text"
                android:layout_marginRight="4dp"
                android:layout_marginEnd="4dp"
                android:autoLink="web|email|map"
                />

            <LinearLayout
                android:id="@+id/message_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/message_file_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="4dp"
                    android:layout_marginRight="4dp"
                    android:textSize="10sp"
                    android:visibility="gone"
                    tools:text="Uploading.. 1/3" />

                <ProgressBar
                    android:id="@+id/message_progress_bar"
                    style="?android:attr/progressBarStyleSmall"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginEnd="4dp"
                    android:layout_marginRight="4dp"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/message_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="4dp"
                    android:layout_marginRight="4dp"
                    tools:text="11:40"
                    android:singleLine="true"
                    android:textColor="@color/grey_600"
                    android:textSize="10sp" />



            </LinearLayout>

        </com.xabber.presentation.custom.CustomFlexboxLayout>

    </LinearLayout>

</LinearLayout>