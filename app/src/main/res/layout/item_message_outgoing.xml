<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="end"
    android:layout_marginTop="4dp"
    android:layout_marginEnd="12dp"
    android:layout_marginBottom="4dp"
    android:gravity="right"
    android:orientation="vertical"
    android:paddingStart="50dp"
    android:paddingLeft="50dp">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/bubble_message_outgoing"
        android:padding="16dp">

        <TextView
            android:id="@+id/tv_text_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="300dp"
            android:text="gkcgckg"
            android:textColor="@color/black"
            android:textSize="12sp"
            app:layout_constraintEnd_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.xabber.presentation.custom.CustomFlexboxLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:viewPartMain="@id/tv_text_content"
            app:viewPartSlave="@id/lin">

            <LinearLayout
                android:id="@+id/lin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_sending_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_text_content"
                    android:layout_toRightOf="@id/tv_text_content"
                    android:text="15:45"
                    android:textColor="@color/grey_600"
                    android:textSize="8sp" />

                <ImageView
                    android:id="@+id/image_message_status"
                    android:layout_width="13dp"
                    android:layout_height="13dp"
                    android:src="@drawable/ic_material_check_24" />
            </LinearLayout>
        </com.xabber.presentation.custom.CustomFlexboxLayout>

        <include
            android:id="@+id/forwardLayout"
            layout="@layout/forwarded_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/tv_text_content"
            android:visibility="gone" />

    </RelativeLayout>
</RelativeLayout>