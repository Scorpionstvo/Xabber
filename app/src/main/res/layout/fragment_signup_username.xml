<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/username_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="32dp"
        android:gravity="center"
        android:lineSpacingMultiplier="1.20"
        android:maxWidth="312dp"
        android:maxLines="2"
        android:text="@string/signup_username_title"
        android:textColor="@color/grey_text_1"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/username_edit_text"
        android:layout_width="0dp"
        android:layout_marginTop="24dp"
        android:hint="@string/signup_username_edit_text_label"
        android:imeOptions="actionDone|flagNoExtractUi"
        android:inputType="textVisiblePassword"
        style="@style/OnboardingEditText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/username_title"
        android:importantForAutofill="no" />

    <TextView
        android:id="@+id/username_subtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:layout_marginLeft="56dp"
        android:layout_marginTop="@dimen/margin_onboarding_standard"
        android:layout_marginEnd="56dp"
        android:layout_marginRight="56dp"
        android:gravity="center"
        android:lineSpacingMultiplier="1.1"
        android:text="@string/signup_username_subtitle"
        android:textColor="@color/grey_text_3"
        android:textSize="@dimen/onboarding_small_text_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/username_edit_text" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/username_btn_next"
        android:layout_width="0dp"
        android:layout_marginTop="92dp"
        android:enabled="false"
        android:gravity="center"
        android:longClickable="false"
        android:stateListAnimator="@animator/shadow"
        android:text="@string/signup_next_button"
        android:textAllCaps="false"
        android:textIsSelectable="false"
        android:textSize="@dimen/onboarding_button_font_size"
        android:theme="@style/OnboardingButtonNext"
        app:cornerRadius="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/username_edit_text" />

</androidx.constraintlayout.widget.ConstraintLayout>