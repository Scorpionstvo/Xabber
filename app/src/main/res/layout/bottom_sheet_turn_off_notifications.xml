<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="@drawable/bottom_sheet_background">

    <TextView
        android:id="@+id/tv_15min"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Turn off for 15 minutes"
        style="@style/BottomSheetTextView"
        app:drawableLeftCompat="@drawable/ic_bell_15m" />

    <TextView
        android:id="@+id/tv_1hour"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Turn off for 1 hour"
        style="@style/BottomSheetTextView"
        app:drawableLeftCompat="@drawable/ic_bell_1h" />

    <TextView
        android:id="@+id/tv_1day"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Turn off for 2 hours"
        style="@style/BottomSheetTextView"
        app:drawableLeftCompat="@drawable/ic_bell_2h" />

    <TextView
        android:id="@+id/tv_2days"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Turn off for 1 day"
        style="@style/BottomSheetTextView"
        app:drawableLeftCompat="@drawable/ic_bell_1d" />

    <TextView
        android:id="@+id/tv_forever"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Turn off forever"
        style="@style/BottomSheetTextView"
        app:drawableLeftCompat="@drawable/ic_bell_off_forever" />

</LinearLayout>