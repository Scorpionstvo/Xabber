<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BottomSheetTextView" parent="Theme">
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:layout_marginStart">12dp</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Toolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="StartButton" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/white</item>
    </style>


    <style name="SignUpButtonNext" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/signup_next_button_color</item>
    </style>

    <style name="LargeAvatarCardView" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorSurface">#BBDEFB</item>
    </style>

    <style name="MinimumAvatarCardView" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorSurface">#2962FF</item>
    </style>

    <style name="ProgressBar" parent="Theme.AppCompat">
        <item name="colorAccent">#BDBDBD</item>
    </style>

    <style name="ShadowWrapper">
        <item name="shadow_radius">8</item>
        <item name="shadow_x_shift">0dp</item>
        <item name="shadow_y_shift">0.5dp</item>
        <item name="shadow_downscale">1</item>
        <item name="shadow_color">@color/grey_200</item>
        <item name="shadow_with_color">false</item>
        <item name="shadow_with_dpi_scale">true</item>
        <item name="shadow_with_css_scale">false</item>
        <item name="shadow_cast_only_background">true</item>
        <item name="shadow_with_content">true</item>
    </style>
</resources>