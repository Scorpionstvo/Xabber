<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BottomSheetTextView" parent="ThemeApplication">
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:layout_marginStart">12dp</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Toolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="StartButton" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/white</item>
    </style>


    <style name="SignUpButtonNext" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/signup_next_button_color</item>
    </style>

    <style name="LargeAvatarCardView" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorSurface">#BBDEFB</item>
    </style>

    <style name="MinimumAvatarCardView" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorSurface">#2962FF</item>
    </style>

    <style name="ProgressBar" parent="Theme.AppCompat">
        <item name="colorAccent">#BDBDBD</item>
    </style>

     <style name="ContactViewCollapsingToolbar" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>



<style name="DialogStyle" parent="Theme.Design.Light.BottomSheetDialog">
<item name="android:windowIsFloating">false</item>
<item name="android:statusBarColor">@android:color/transparent</item>
<item name="android:windowSoftInputMode">adjustResize</item>
</style>

    <style name="AttachRadioButtonStyle" parent="Widget.Material3.CompoundButton.RadioButton">
        <item name="textFillColor">@color/blue_300</item>

    </style>

      <style name="TextStyle" parent="ThemeOverlay.Material3.AutoCompleteTextView">
        <item name="android:textColor">@color/blue_300</item>
          <item name="android:textSize">50sp</item>

    </style>

</resources>